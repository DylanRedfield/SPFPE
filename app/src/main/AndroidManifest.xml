<?xml version="1.0" encoding="utf-8"?>
<manifest package="me.dylanredfield.spfpe"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".util.SPFPE"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LogInActivity"
            android:label="@string/title_activity_log_in"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.SignUpActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.student.FitnessMainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.student.FitnessAddActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.student.NewClassActivity"
            android:label="@string/new_class"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.student.AssignmentsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.teacher.ClassActivity"/>
        <activity android:name=".activity.student.MakeUpListActivity"/>
        <activity android:name=".activity.teacher.IndividualStudentPanelActivity"/>
        <activity android:name=".activity.teacher.IndividualStudentFitnessMainActivity"/>
        <activity android:name=".activity.teacher.MakeUpListActivity"/>
        <activity android:name=".activity.teacher.AnalyzeClassActivity"/>
    </application>

</manifest>
